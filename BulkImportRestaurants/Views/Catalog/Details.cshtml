@model IEnumerable<BulkImportRestaurants.Models.MenuItem>

@{
    var restaurant = (BulkImportRestaurants.Models.Restaurant)ViewBag.Restaurant;
    ViewData["Title"] = restaurant.Name + " – Menu";
}

<h2>@restaurant.Name – Menu</h2>

@if (!string.IsNullOrEmpty(restaurant.ImagePath))
{
    <img src="@restaurant.ImagePath"
         class="img-fluid mb-3"
         alt="@restaurant.Name"
         style="max-height:300px; width:100%; object-fit:cover;" />
}

@if (!string.IsNullOrEmpty(restaurant.Description))
{
    <p>@restaurant.Description</p>
}

@if (!string.IsNullOrEmpty(restaurant.Address))
{
    <p><strong>Address:</strong> @restaurant.Address</p>
}

@if (!string.IsNullOrEmpty(restaurant.Phone))
{
    <p><strong>Phone:</strong> @restaurant.Phone</p>
}

<hr />

@if (!Model.Any())
{
    <p>No approved menu items yet.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Price</th>
                <th>Currency</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <td>@m.Title</td>
                    <td>@m.Price</td>
                    <td>@m.Currency</td>
                </tr>
            }
        </tbody>
    </table>
}

<a asp-action="Index" class="btn btn-secondary btn-sm">Back to Catalog</a>
