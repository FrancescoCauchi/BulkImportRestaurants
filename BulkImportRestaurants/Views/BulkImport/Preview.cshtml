@model BulkImportRestaurants.Models.BulkImportPreviewViewModel

@{
    ViewData["Title"] = "Bulk Import Preview";
}

<h2>Preview Imported Data</h2>

<h3 class="mt-4">Restaurants</h3>

@if (Model.Restaurants.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Owner Email</th>
                <th>Description</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model.Restaurants)
            {
                <tr>
                    <td>@r.Id</td>
                    <td>@r.Name</td>
                    <td>@r.OwnerEmailAddress</td>
                    <td>@r.Description</td>
                    <td>@r.Address</td>
                    <td>@r.Phone</td>
                    <td>@r.Status</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No restaurants found in the import.</p>
}

<h3 class="mt-4">Menu Items</h3>

@if (Model.MenuItems.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>GUID</th>
                <th>Title</th>
                <th>Price</th>
                <th>Currency</th>
                <th>Restaurant ID</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model.MenuItems)
            {
                <tr>
                    <td>@m.Guid</td>
                    <td>@m.Title</td>
                    <td>@m.Price</td>
                    <td>@m.Currency</td>
                    <td>@m.RestaurantId</td>
                    <td>@m.Status</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No menu items found in the import.</p>
}

<form asp-action="Commit" method="post" class="mt-4">
    <button type="submit" class="btn btn-success">
        Commit Import (Save to Database)
    </button>
</form>

<p class="mt-3 text-muted">
    After committing, items are saved with status <strong>pending</strong> and will require approval.
</p>
