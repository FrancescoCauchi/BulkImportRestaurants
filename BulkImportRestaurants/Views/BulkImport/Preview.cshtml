@model BulkImportRestaurants.Models.BulkImportPreviewViewModel

@{
    ViewData["Title"] = "Bulk Import Preview";
}

<h2>Preview Imported Data</h2>

<h3>Restaurants</h3>

@if (Model.Restaurants.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Owner Email</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model.Restaurants)
            {
                <tr>
                    <td>@r.Id</td>
                    <td>@r.Name</td>
                    <td>@r.OwnerEmailAddress</td>
                    <td>@r.Status</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No restaurants in this import.</p>
}

<h3>Menu Items</h3>

@if (Model.MenuItems.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Guid</th>
                <th>Title</th>
                <th>Price</th>
                <th>Restaurant Id</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model.MenuItems)
            {
                <tr>
                    <td>@m.Guid</td>
                    <td>@m.Title</td>
                    <td>@m.Price @m.Currency</td>
                    <td>@m.RestaurantId</td>
                    <td>@m.Status</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No menu items in this import.</p>
}

<p class="mt-3">
    (Later we will add a <strong>Commit</strong> button here to save to the database and generate the ZIP.)
</p>
